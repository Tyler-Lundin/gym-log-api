{
	"compilerOptions": {
		"typeRoots": [
			"src/@types"
		],
		"target": "es2016",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
        "baseUrl": "src",
        "paths": {
            "@controllers/*": ["controllers/*"],
            "@models/*": ["models/*"],
            "@services/*": ["services/*"],
            "@utils/*": ["utils/*"],
            "@middlewares/*": ["middlewares/*"],
            "@routes/*": ["routes/*"]
        }
	}
}
